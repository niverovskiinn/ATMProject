<UserControl x:Class="WpfClient.Tools.Controls.LabelAndTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.Tools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Label Name="Label" Grid.Row="0" FontWeight="Bold" FontSize="16" Margin="-2,-10,0,0" HorizontalContentAlignment="Center"  
               Content="{Binding Caption, RelativeSource={RelativeSource FindAncestor, AncestorType=local:LabelAndTextControl}, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Name="TextBox" Grid.Row ="1" FontSize="14" FontWeight="Bold" 
                 Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType=local:LabelAndTextControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
